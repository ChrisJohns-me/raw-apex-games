{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "properties": {
        "weapons": {
            "type": "array",
            "properties": {
                "id": {
                    "type": "string"
                },
                "friendlyName": {
                    "type": "string"
                },
                "ammoType": {
                    "type": "string"
                },
                "killfeedRegExPattern": {
                    "type": "string"
                },
                "matchInfoRegExPattern": {
                    "type": "string"
                },
                "imageName": {
                    "type": "string"
                },
                "adsMoveSpeed": {
                    "type": "number"
                },
                "class": {
                    "type": "string"
                },
                "statistics": {
                    "title": "Statistics",
                    "type": "object",
                    "properties": {
                        "rateOfFire": {
                            "type": "number"
                        },
                        "bodyDamagePerSecond": {
                            "type": "number"
                        },
                        "headDamagePerSecond": {
                            "type": "number"
                        },
                        "bodyDamage": {
                            "type": "number"
                        },
                        "headDamage": {
                            "type": "number"
                        },
                        "legDamage": {
                            "type": "number"
                        }
                    }
                }
            }
        }
    }
}
