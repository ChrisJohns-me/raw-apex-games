{
    "$schema": "./config.schema.json",
    "assumptions": {
        "opponentShieldDefault": 75,
        "opponentHealthDefault": 100,
        "isRosterNullPlayerDisconnect": true,
        "knockdownExpireTime": 10000,
        "eliminationExpireTime": 300000
    },
    "facts": {
        "respawnBannerExpireTime": 60000,
        "maxShield": 125,
        "maxHealth": 100,
        "maxUltimateCooldownTime": 360000,
        "maxSquadSize": 3
    },
    "featureFlags": {
        "enableMatchTimerWindow": true,
        "enableUltTimerWindow": true,
        "enableInflictionInsightWindow": true,
        "inflictionInsight": {
            "showAssumedOpponentTeammateShields": false,
            "showAssumedOpponentTeammateHealth": false,
            "assumeKnockdownExpires": true,
            "assumeEliminationExpires": true
        },
        "legendSelectAssist": {
            "legendStats": true,
            "complimentaryLegends": true
        }
    },
    "featureConfigs": {
        "inflictionInsight": {
            "refreshTime": 1000,
            "damageResetTime": 20000
        },
        "legendSelectAssist": {
            "minLegendStatsMatches": 1,
            "maxComplimentaryLegends": 3,
            "minShowComplimentaryLegendsMatches": 10,
            "limitLegendStatsMatches": 250,
            "limitComplimentaryLegendsMatches": 500,
            "complimentaryLegendsWeights": {
                "winWeight": 0.2,
                "placementWeight": 0.2,
                "damageWeight": 0.2,
                "eliminationWeight": 0.2,
                "durationWeight": 0.2
            },
            "legendRows": [
                {
                    "top": 250,
                    "right": 250,
                    "legendIds": [
                        "#character_bloodhound_NAME",
                        "#character_gibraltar_NAME",
                        "#character_lifeline_NAME",
                        "#character_pathfinder_NAME",
                        "#character_wraith_NAME"
                    ]
                },
                {
                    "top": 300,
                    "right": 250,
                    "legendIds": [
                        "#character_bangalore_NAME",
                        "#character_caustic_NAME",
                        "#character_mirage_NAME",
                        "#character_octane_NAME",
                        "#character_wattson_NAME"
                    ]
                },
                {
                    "top": 400,
                    "right": 250,
                    "legendIds": [
                        "#character_crypto_NAME",
                        "#character_revenant_NAME",
                        "#character_loba_NAME",
                        "#character_rampart_NAME",
                        "#character_horizon_NAME"
                    ]
                }
            ]
        },
        "ultTimer": {
            "refreshTime": 1000,
            "maxHistoryCount": 5,
            "highConfidenceAmount": 0.7,
            "lowConfidenceAmount": 0.35
        }
    },
    "general": {
        "playerDeathHUDTimeout": 30000,
        "matchEndHUDTimeout": 15000
    },
    "overwolfQuirks": {},
    "uiContainers": {
        "inflictionInsight": {
            "defaultPosition": {
                "x": 0.5,
                "y": 0.95
            },
            "positionUnit": "percent",
            "positionXAnchor": "left",
            "positionYAnchor": "bottom"
        }
    }
}
