{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "properties": {
        "env": {
            "type": "string",
            "enum": [
                "dev",
                "prod"
            ]
        },
        "firebase": {
            "type": "object",
            "properties": {
                "apiKey": {
                    "type": "string"
                },
                "authDomain": {
                    "type": "string"
                },
                "projectId": {
                    "type": "string"
                },
                "storageBucket": {
                    "type": "string"
                },
                "messagingSenderId": {
                    "type": "string"
                },
                "appId": {
                    "type": "string"
                }
            },
            "required": [
                "apiKey",
                "authDomain",
                "projectId",
                "storageBucket",
                "messagingSenderId",
                "appId"
            ]
        }
    },
    "required": [
        "env",
        "firebase"
    ],
    "additionalProperties": false
}